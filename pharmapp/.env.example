# Django Environment Variables
# Copy this file to .env and fill in your actual values for production

# SECURITY WARNING: keep the secret key used in production secret!
# Generate a new key: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=False

# Allowed hosts for production (comma-separated)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database settings (optional - defaults to SQLite if not set)
# DB_NAME=your_database_name
# DB_USER=your_database_user
# DB_PASSWORD=your_database_password
# DB_HOST=localhost
# DB_PORT=5432

# Email settings (optional)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Other production settings can be added here as needed
